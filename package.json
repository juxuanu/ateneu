{
  "name": "ateneu",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "db:generate": "drizzle-kit generate --config=./infrastructure/db/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=./infrastructure/db/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=./infrastructure/db/drizzle.config.ts"
  },
  "dependencies": {
    "@astrojs/check": "^0.7.0",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/ts-plugin": "^1.8.0",
    "astro": "^4.10.0",
    "better-sqlite3": "^10.1.0",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "packageManager": "pnpm@9.2.0+sha512.98a80fd11c2e7096747762304106432b3ddc67dcf54b5a8c01c93f68a2cd5e05e6821849522a06fb76284d41a2660d5e334f2ee3bbf29183bf2e739b1dafa771",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@types/better-sqlite3": "^7.6.10",
    "@typescript-eslint/parser": "^7.12.0",
    "daisyui": "^4.12.2",
    "drizzle-kit": "^0.21.4",
    "eslint": "^9.4.0",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "prettier": "^3.3.1",
    "prettier-plugin-astro": "^0.14.0"
  },
  "prettier": {
    "astroAllowShorthand": true,
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ],
    "plugins": [
      "prettier-plugin-astro"
    ]
  }
}
