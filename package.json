{
  "name": "ateneu",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "db:push": "drizzle-kit push --config=./src/backend/infrastructure/db/drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config=./src/backend/infrastructure/db/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=./src/backend/infrastructure/db/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=./src/backend/infrastructure/db/drizzle.config.ts"
  },
  "dependencies": {
    "@astrojs/check": "^0.8.3",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/ts-plugin": "^1.9.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "astro": "^4.11.5",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "luxon": "^3.4.4",
    "postgres": "^3.4.4",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "packageManager": "pnpm@9.4.0+sha512.f549b8a52c9d2b8536762f99c0722205efc5af913e77835dbccc3b0b0b2ca9e7dc8022b78062c17291c48e88749c70ce88eb5a74f1fa8c4bf5e18bb46c8bd83a",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@types/better-sqlite3": "^7.6.10",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20",
    "@typescript-eslint/parser": "^7.16.1",
    "daisyui": "^4.12.10",
    "drizzle-kit": "^0.23.1",
    "eslint": "^9.8.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "vitest": "^2.0.2"
  },
  "prettier": {
    "astroAllowShorthand": true,
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ],
    "plugins": [
      "prettier-plugin-astro"
    ]
  }
}
